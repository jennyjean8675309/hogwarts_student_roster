<h1>New Student Form</h1>

<% if @student.errors.any? %>
    <% @student.errors.full_messages.each do |msg| %>
        <%= msg %>
    <% end %>
<% end %>

<%= form_for @student do  |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :grade %>
    <%= f.number_field :grade %>
    <br>
    <%= f.label :courses %>
    <%= f.collection_select :courses, Course.all, :id, :name, prompt: true %>
    <%= f.submit %>
<% end %>